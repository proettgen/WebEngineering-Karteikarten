{
  "name": "super-nices-backend",
  "version": "1.0.50",
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc",
    "build:copy-assets": "copyfiles -u 1 \"src/data/**/*.json\" dist && copyfiles -u 1 \"src/swagger/*.json\" dist",
    "generate-swagger": "ts-node scripts/generateSwagger.ts",
    "build": "npm run generate-swagger && npm run clean && npm run build:ts && npm run build:copy-assets",
    "start": "node dist/api/index.js",
    "dev": "nodemon --watch api --ext ts,json --exec ts-node api/index.ts",
    "test": "vitest --ui",
    "test:once": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write src/**/*.ts",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit introspect"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "drizzle-orm": "^0.44.2",
    "express": "latest",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "latest",
    "copyfiles": "latest",
    "dotenv": "^17.0.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "nodemon": "latest",
    "prettier": "latest",
    "rimraf": "latest",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "latest",
    "typescript-eslint": "latest",
    "vitest": "latest"
  }
}
